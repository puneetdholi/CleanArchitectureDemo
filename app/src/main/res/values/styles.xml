<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTextTitle">
        <item name="android:fontFamily">@font/fira_sans_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/black3</item>
    </style>

    <style name="HomeTextSubTitle">
        <item name="android:fontFamily">@font/fira_sans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">0.8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black3</item>
    </style>

</resources>
